<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_truck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waysideutilities.waysidetruckfreights.Owner.CheckTruck">

    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="@string/select_truck"
        android:id="@+id/textView2" />

    <ListView
        android:id="@+id/truckList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/btnAddNewTruck"></ListView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnAddNewTruck"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="@string/add_new_truck"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white" />
</RelativeLayout>
