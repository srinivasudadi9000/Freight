<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/truckMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        tools:context="com.waysideutilities.waysidetruckfreights.MapsTruckActivity" />

    <TextView
        android:id="@+id/txt_start_trip"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/text_size"
        android:background="@color/colorPrimary"
        android:text="@string/show_route"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/txt_stop_trip"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/text_size"
        android:background="@color/colorPrimary"
        android:text="@string/stop_trip"
        android:textColor="@color/white" />
</LinearLayout>