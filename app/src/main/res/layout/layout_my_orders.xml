<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLoadPostNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:padding="2dp" />

            <TextView
                android:id="@+id/txtLoadDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:padding="2dp" />


            <TextView
                android:id="@+id/txtLoadFrom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:lineSpacingExtra="3dp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/txtLoadTo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/txtLoadWeight"
                android:layout_width="fill_parent"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/txtLoadType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:padding="2dp" />

            <TextView
                android:id="@+id/txtCash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="@dimen/text_size"
                android:padding="2dp" />

            <TextView
                android:id="@+id/txtTripStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_gravity="right"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:padding="2dp"
                android:textColor="@color/grey" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>





